{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@root/*": [ "src/*" ],
            "@app/*": [ "src/api/*" ]
        },
        "outDir": "dist",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts", "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}